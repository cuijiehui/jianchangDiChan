<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cui.android.jianchengdichan.view.ui.avtivity.ActDetaiActivity">

    <include layout="@layout/include_top_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.cui.android.jianchengdichan.view.ui.customview.UIImageView
                    android:id="@+id/iv_act_detai_pic"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:scaleType="center"
                    android:layout_marginTop="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_act_datail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="广州潜水学校"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_act_datail_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/browse_icon"
                    android:drawablePadding="2dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:text="已有99次浏览" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_act_datail_content"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:padding="8dp"
                android:textSize="12sp"
                android:text="学校座落于广州珠江之滨，交训机构。" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他信息"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_half_shape"
                    android:paddingRight="12dp"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_act_datail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活动时间：李赞宗"
                android:textColor="@color/black"
                android:background="@color/white"
                android:paddingTop="12dp"
                android:textSize="11sp"
                android:paddingLeft="12dp"/>
            <TextView
                android:id="@+id/tv_act_datail_addres"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活动地址：南洲路2354号"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:textSize="11sp"

                android:background="@color/white"
                android:layout_marginTop="0.5dp"
                />

            <TextView
                android:id="@+id/tv_act_datail_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系电话：(020)34060983"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="11sp"
                android:paddingLeft="12dp"
                android:layout_marginBottom="12dp"/>
            <Button
                android:id="@+id/bt_act_detai_sub"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="戳我报名"
                android:background="@color/main_flash_sale_back"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
