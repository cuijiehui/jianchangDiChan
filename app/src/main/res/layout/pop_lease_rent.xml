<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.cui.android.jianchengdichan.view.ui.customview.MyListView
                android:id="@+id/lv_lease_rent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.cui.android.jianchengdichan.view.ui.customview.MyListView>


            <RelativeLayout
                android:id="@+id/rel_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    >

                    <EditText
                        android:id="@+id/ed_min"
                        android:layout_width="85dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/search_et_bg_shape"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <EditText
                        android:id="@+id/ed_max"
                        android:layout_width="85dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/search_et_bg_shape"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_bt_state_change"
                    android:text="确定"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
