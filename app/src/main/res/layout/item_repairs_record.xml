<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_repairs_record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="mengjinxitongguzhang" />

    <TextView
        android:id="@+id/tv_repairs_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_repairs_record_dispose"
        android:text="2018/05/06 00:30"
        android:textColor="@color/main_seek_text_col"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tv_repairs_record_dispose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@color/main_top_col"
        android:gravity="center"
        android:padding="5dp"
        android:text="chulizhong" />

</RelativeLayout>