<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.PayingActivity">

    <include layout="@layout/include_top_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/iv_paying_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/paying_water_icon" />

        <TextView
            android:id="@+id/tv_paying_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_paying_icon"
            android:layout_toRightOf="@+id/iv_paying_icon"
            android:text="guangzhou"
            android:textColor="@color/main_text_col"
            android:layout_marginLeft="5dp"

            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_paying_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-03-16"
            android:textColor="@color/main_seek_text_col"
            android:textSize="8sp"
            android:layout_below="@+id/tv_paying_name"
            android:layout_toRightOf="@+id/iv_paying_icon"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_paying_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="11dp"
            android:textColor="@color/main_seek_text_col"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@drawable/main_parting_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"/>
        <TextView
            android:id="@+id/tv_paying_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.00"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/main_flash_sale_back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/main_parting_line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="支付方式"
        android:textSize="11sp"
        android:paddingLeft="11dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <ImageView
            android:id="@+id/paying_wechat"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/icon_wechat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            />
        <TextView
            android:id="@+id/paying_wechat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/main_text_col"
            android:textSize="11sp"
            android:layout_toRightOf="@+id/paying_wechat"
            android:layout_alignTop="@+id/paying_wechat"
            android:layout_marginLeft="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐已安装微信的用户使用"
            android:textSize="9sp"
            android:textColor="@color/main_flash_sale_text"
            android:layout_below="@+id/paying_wechat_name"
            android:layout_toRightOf="@+id/paying_wechat"
            android:layout_marginLeft="11dp"
            />
        <ImageView
            android:id="@+id/iv_paying_wechat_select"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/paying_pay_icon_sele_selector"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <ImageView
            android:id="@+id/paying_alipay"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/icon_alipay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            />
        <TextView
            android:id="@+id/paying_alipay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:textColor="@color/main_text_col"
            android:textSize="11sp"
            android:layout_toRightOf="@+id/paying_alipay"
            android:layout_alignTop="@+id/paying_alipay"
            android:layout_marginLeft="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐已安装支付宝的用户使用"
            android:textSize="9sp"
            android:textColor="@color/main_flash_sale_text"
            android:layout_below="@+id/paying_alipay_name"
            android:layout_toRightOf="@+id/paying_alipay"
            android:layout_marginLeft="11dp"
            />
        <ImageView
            android:id="@+id/iv_paying_alipay_select"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/paying_pay_icon_sele_selector"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:background="@drawable/main_parting_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/paying_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="@color/main_text_col"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"/>
        <EditText
            android:id="@+id/et_paying_remarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_toRightOf="@+id/paying_beizhu"/>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_paying_ok"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@color/main_top_col"
        android:text="确认支付"
        android:layout_marginTop="11dp"
        android:textColor="@color/white"/>
</LinearLayout>