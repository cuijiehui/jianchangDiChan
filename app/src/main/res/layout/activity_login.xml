<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="326dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_login_top" />

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:layout_marginTop="16dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_centerInParent="true"
            android:background="@drawable/login_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_username_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/login_user_icon" />

        <EditText
            android:id="@+id/et_login_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="账号/用户名"
            android:textColorHint="@color/main_seek_text_col"
            android:layout_toLeftOf="@+id/iv_login_delete"
            android:layout_toRightOf="@+id/login_username_icon" />

        <ImageView
            android:id="@+id/iv_login_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_delete_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/login_pwd_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_pwd_icon" />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_login_look"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/main_seek_text_col"
            android:layout_toRightOf="@+id/login_pwd_icon" />

        <ImageView
            android:id="@+id/iv_login_look"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_see_pwd_selector" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_login_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textColor="@color/login_forget_pwd"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:layout_marginTop="19dp"
        />
    <Button
        android:id="@+id/bt_login_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_login_button" />
</LinearLayout>