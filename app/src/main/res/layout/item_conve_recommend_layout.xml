<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/ll_recommend">

    <com.cui.android.jianchengdichan.view.ui.customview.UIImageView
        android:id="@+id/tv_conve_pic"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tv_conve_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="广州潜水学院"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_conve_address"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="地址：南洲路2354号"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_conve_phone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="电话：(020)34060983"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>


</LinearLayout>
