<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.avtivity.SplashActivity">


    <RelativeLayout
        android:id="@+id/rl_fullpage_adv_countdown"
        android:layout_margin="5dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_fullpage_txt1"
            android:text="剩余"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--倒数几秒进入首页-->
        <TextView
            android:id="@+id/tv_fullpage_txt2"
            android:layout_toRightOf="@+id/tv_fullpage_txt1"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/bt_fullpageads_pass"
        android:text="跳过"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:layout_width="100dp"
        android:background="@drawable/bt_fullpage_pass_shape"
        android:layout_height="40dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/splash_bg"/>

</RelativeLayout>