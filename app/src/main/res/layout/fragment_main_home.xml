<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.Fragment.MainHomeFragment">

    <!-- 头部-->
    <RelativeLayout
        android:id="@+id/rl_main_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_top_col">

        <ImageView
            android:id="@+id/iv_main_top_qrcode"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/main_qrcode_button"
            android:clickable="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="8dp"
            android:layout_centerInParent="true"
            >

            <EditText
                android:id="@+id/et_main_top_seek"
                android:layout_width="279dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:hint="商品名称"
                android:textColorHint="@color/main_seek_text_col"
                android:layout_centerVertical="true"
                android:textSize="15px"
                />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_main_top_add"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/main_add_button"
            android:clickable="true" />
    </RelativeLayout>
    <!--主页内容-->
    <!--下拉刷新-->
    <com.cui.android.jianchengdichan.view.ui.customview.RefreshableView
        android:id="@+id/rv_main_refreshable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_main_top"
        android:layout_marginBottom="49dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--轮播图-->
                <com.youth.banner.Banner
                    android:id="@+id/bn_main_adv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!--最新公告-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/main_new_notice" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextSwitcher
                            android:id="@+id/tv_main_notice_new"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="#建设智慧社区门户网站将在月底开……# "
                            android:textSize="16sp" />


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/main_parting_line" />
                <!--附近租贷-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_rent_icon"
                        android:layout_width="7dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/main_house_rent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_rent_icon"
                        android:layout_toRightOf="@+id/iv_rent_icon"
                        android:text="附近租赁"
                        android:textColor="@color/main_text_col"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_rent_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="17dp"
                        android:drawableRight="@drawable/main_font_icon"
                        android:text="查看更多"
                        android:textColor="@color/main_seek_text_col"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/imaginary_line" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_main_rent"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/main_parting_line" />
                <!--社区管家-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <ImageView
                        android:id="@+id/iv_main_community_icon"
                        android:layout_width="7dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/main_house_rent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_main_community_icon"
                        android:layout_toRightOf="@+id/iv_main_community_icon"
                        android:text="社区管家"
                        android:textColor="@color/main_text_col"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/main_parting_line" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_main_community"
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:layout_marginTop="14dp"
                    android:paddingLeft="20dp">

                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/main_parting_line" />
                <!--停车专区-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <ImageView
                        android:id="@+id/iv_main_stop_car_icon"
                        android:layout_width="7dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/main_stop_car_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_main_stop_car_icon"
                        android:layout_toRightOf="@+id/iv_main_stop_car_icon"
                        android:text="停车专区"
                        android:textColor="@color/main_text_col"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/main_parting_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/main_car_stop" />

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="100dp"
                        android:background="@drawable/main_top_car_manager"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/main_stop_car_break"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/main_parting_line" />
                <!--限时抢购-->
                <include android:id="@+id/flash_sale_include" layout="@layout/includ_flash_sale_layout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/main_parting_line" />
                <!--新品上市-->
                <include android:id="@+id/goods_new_include" layout="@layout/includ_new_goods_layout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/main_parting_line" />
                <!--猜你喜欢-->
                <include android:id="@+id/you_like_include" layout="@layout/includ_you_like_layout"/>

            </LinearLayout>


        </ScrollView>
    </com.cui.android.jianchengdichan.view.ui.customview.RefreshableView>
</RelativeLayout>