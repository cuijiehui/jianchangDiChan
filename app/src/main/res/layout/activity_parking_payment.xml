<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.avtivity.ParkingPaymentActivity">

    <include layout="@layout/include_top_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="车辆进场时间"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_approach_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="3"
                android:gravity="right"
                android:padding="4dp"
                tools:text="2018-11-01 10:42:48"
                android:textColor="@color/main_flash_sale_text"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="停车时长"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_stop_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="3"
                android:gravity="right"
                android:padding="4dp"
                tools:text="0时1分"
                android:textColor="@color/main_flash_sale_text"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="付款金额"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_paying_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="3"
                android:gravity="right"
                android:padding="4dp"
                tools:text="0时1分"
                android:textColor="@color/login_forget_pwd"
                android:textSize="13sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:text="支付方式"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/paying_wechat"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:background="@drawable/icon_wechat" />

            <TextView
                android:id="@+id/paying_wechat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/paying_wechat"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/paying_wechat"
                android:text="微信支付"
                android:textColor="@color/main_text_col"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paying_wechat_name"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/paying_wechat"
                android:text="推荐已安装微信的用户使用"
                android:textColor="@color/main_flash_sale_text"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/iv_paying_wechat_select"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/paying_pay_icon_sele_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/paying_alipay"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:background="@drawable/icon_alipay" />

            <TextView
                android:id="@+id/paying_alipay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/paying_alipay"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/paying_alipay"
                android:text="支付宝支付"
                android:textColor="@color/main_text_col"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paying_alipay_name"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/paying_alipay"
                android:text="推荐已安装支付宝的用户使用"
                android:textColor="@color/main_flash_sale_text"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/iv_paying_alipay_select"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/paying_pay_icon_sele_selector" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_paying"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_circular_bead_blue_col"
        android:text="支付"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_circular_bead_blue_col"
        android:text="支付"
        android:visibility="gone"
        android:textColor="@color/white" />


</LinearLayout>