<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lin_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/like_back_col"
    tools:context=".view.ui.avtivity.InCommunityActivity">

    <include layout="@layout/include_top_layout" />
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="名称"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/ed_name"
            android:layout_toRightOf="@+id/text1"
            style="@style/release_name_hint_style"
            android:hint="请输入你的姓名"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="身份"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/ed_identity"
            android:layout_toRightOf="@+id/text2"
            style="@style/release_name_hint_style"
            android:hint="业主／家人／物业员工／租户"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_community_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="社区"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_community_name"
            android:layout_toRightOf="@+id/text3"
            style="@style/release_name_hint_style"
            android:hint="选择你要进入的社区"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="提交"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_pressed_shape"
        />

</LinearLayout>